<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- tool bar -->
    <RelativeLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tvViewCalendarTitle"
            android:text="current"
            android:textSize="14dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivViewCalendarPrev"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tvViewCalendarTitle"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivViewCalendarNext"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvViewCalendarTitle"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <!-- cal header -->
    <LinearLayout
        android:id="@+id/llViewCalendarHeader"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="일"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="월"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="화"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="수"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="목"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="금"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="토"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- days view -->
    <GridView
        android:id="@+id/gvViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="7"/>

</LinearLayout>