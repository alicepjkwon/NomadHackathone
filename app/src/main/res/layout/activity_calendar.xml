<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarNS="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.leejinseong.nomadhackathone.view.MyCalendarView
            android:id="@+id/cvActivityCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            calendarNS:dateFormat="yyyy MMMM"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvActivityCalendar"
            android:paddingTop="12dp"
            android:background="@color/darkOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlActivityCalendar"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</RelativeLayout>